{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Add this
    "isolatedModules": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleResolution": "bundler", // Change from "node" to "bundler"
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["src/lib/*"],
      "@database/*": ["src/database/*"],
      "@schemas/*": ["src/database/schemas/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middleware/*"],
      "@router/*": ["src/router/*"]
    },
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "sourceMap": true
  },
  "files": ["./types/express.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.cjs",
    "src/database/config/config.cjs",
    "src/mails/VerifyAccount.jsx",
    "src/index.mts"
  ]
}